{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "src",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "importHelpers": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "excludes"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".cache",
    "dist",
    "build",
    "/excludes/*"
  ]
}
